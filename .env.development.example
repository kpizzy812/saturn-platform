# Saturn Platform Configuration
APP_ENV=local
APP_NAME="Saturn Platform Development"
APP_ID=development
SATURN_ENV=dev
APP_KEY=
APP_URL=http://localhost
APP_PORT=8000
APP_DEBUG=true
SSH_MUX_ENABLED=true

# PostgreSQL Database Configuration
DB_DATABASE=saturn
DB_USERNAME=saturn
DB_PASSWORD=password
DB_HOST=host.docker.internal
DB_PORT=5432

# Ray Configuration
# Set to true to enable Ray
RAY_ENABLED=false
# Set custom ray port
# RAY_PORT=

# Enable Laravel Telescope for debugging
TELESCOPE_ENABLED=false

# Selenium Driver URL for Dusk
DUSK_DRIVER_URL=http://selenium:4444

# Broadcasting / WebSocket Configuration (Soketi)
# SECURITY: Generate unique credentials for each environment
# Use: openssl rand -hex 16
BROADCAST_DRIVER=pusher
PUSHER_APP_ID=saturn-dev
PUSHER_APP_KEY=saturn-dev-key-change-in-production
PUSHER_APP_SECRET=saturn-dev-secret-change-in-production
PUSHER_BACKEND_HOST=saturn-realtime
PUSHER_BACKEND_PORT=6001
PUSHER_SCHEME=http

# Frontend WebSocket Configuration (must match PUSHER_* above)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_BACKEND_HOST}"
VITE_PUSHER_PORT="${PUSHER_BACKEND_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"

# Storage API Keys
# For cache purging
BUNNY_API_KEY=
# For asset uploads
BUNNY_STORAGE_API_KEY=
